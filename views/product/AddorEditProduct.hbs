{{>header}}
<h3 align='center'>{{viewTitle}}</h3>
<form action="/product" method="POST" autocomplete="off" class="col-md-6 offset-md-3">
    <div>
        <input type="hidden" name="_id" value="{{product._id}}">
        <div class="form-group">
            <label>Product ID</label>
            <input type="text" class="form-control" name="proID" value="{{product.ProductID}}" placeholder="Product ID">
            <div class="text-danger">
                {{product.ProductIDError}}
            </div>
        </div>
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" class="form-control" name="proName" value="{{product.ProductName}}" placeholder="Product Name">
            <div class="text-danger">
                {{product.ProductNameError}}
            </div>
        </div>
        <div class="form-group">
            <label>Amount</label>
            <input type="text" class="form-control" name="Amount" value="{{product.Amount}}" placeholder="Amount">
            <div class="text-danger">
                {{product.AmountError}}
            </div>
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" name="Price" placeholder="Price" value="{{product.Price}}" class="form-control">
        </div>

        <div class="form-group">
        </div>
        
        <div class="form-group" align='Center'>
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
            <a href="product/Catalog" class="btn btn-danger"><i class="fa fa-list-alt"></i> View All</a>
        </div>
    </div>
    
</form>
{{>footer}}